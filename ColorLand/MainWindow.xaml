<Window x:Class="ColorLand.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Colorland" Height="550" Width="750" Background="LightBlue">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Canvas Background="White" x:Name="BoardCanvas" Height="400" Width="600" Grid.Row="0" Grid.Column="1"></Canvas>
        <Button Grid.Row="1" Grid.Column="0" Click="DrawCard">Draw Card</Button>
    </Grid>
</Window>
